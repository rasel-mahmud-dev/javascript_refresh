{
  "name": "javascript-refresh",
  "version": "0.0.0",
  "private": true,
  "nodemonConfig": {
    "watch": [
      "views",
      "src",
      "src/public/stylesheets",
      "src/public/javascripts",
      "src/routes"
    ],
    "ext": "ejs, js, scss",
    "ignore": [
      "*.test.ts"
    ],
    "execMap": {
      "ts": "ts-node"
    }
  },
  "scripts": {
    "start": "nodemon ./bin/www",
    "tsc": "tsc",
    "dev3": "set NODE_ENV=development&ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "npm-run-all --parallel tsc copy",
    "copy": "ts-node copyStaticAssets.ts",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "dev": "set NODE_ENV=development&set NODE_SCOPE=local&npm-run-all --parallel watch-ts watch-sass watch-node",
    "watch-sass": "sass --watch src\\public\\stylesheets:dist\\public\\stylesheets"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "ejs": "^3.1.7",
    "express": "^4.17.3",
    "express-ejs-layouts": "^2.5.1",
    "highlight.js": "^11.5.1",
    "marked": "^4.0.14",
    "sqlite3": "^5.0.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.27",
    "connect-livereload": "^0.6.1",
    "livereload": "^0.9.3",
    "morgan": "^1.10.0",
    "node-sass-middleware": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.50.1",
    "shelljs": "^0.8.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  }
}
