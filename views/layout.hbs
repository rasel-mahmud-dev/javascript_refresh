     </div>
    </div>

  </header>


  <div class="site-inner">
    <div class="site-inner__content">
      <div>
        {{{body}}}
      </div>
      <div class="secondary">
        {{#if category}}

          <h1>{{category.category_label}}</h1>

          {{#each category.categories}}

            <h2>{{@key}}</h2>

            <div>
              {{#each this}}
                <h4>{{category.category_label}}</h4>   <!--Not Accessible inside nested loop-->
                <a href="">{{this.label}}</a>
              {{/each}}
            </div>
          {{/each}}
        {{/if}}

      </div>
    </div>
  </div>




